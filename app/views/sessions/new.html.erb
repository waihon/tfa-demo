<div class="container">
  <header>
    <h3>Sign In</h3>
  </header>

  <%= form_tag(session_path) do %>
    <fieldset>
      <div class="form-group">
        <%= label_tag :email, "Email", class: "required" %>
        <%= email_field_tag :email, nil, size: 40, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :password, "Password", class: "required" %>
        <%= password_field_tag :password, nil, size: 40, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Sign In", class: "btn btn-primary" %>
      </div>
    </fieldset>
  <% end %>
</div>
