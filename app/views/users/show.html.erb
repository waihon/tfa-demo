<div class="container">
  <h3>User Profile</h3>
  <table class="table">
    <tr>
      <th>Name</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @user.email %></td>
    </tr>
  </table>
  <%= link_to "Edit Account", edit_user_path(@user), class: "btn btn-primary" %>
</div>
